<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sarthak.icop.icop.activities.PathikActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let your Emergency Contacts Know you\nare Travelling"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>

    <AutoCompleteTextView
        android:id="@+id/boarding_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place of Boarding"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/text_bg"/>

    <AutoCompleteTextView
        android:id="@+id/destination_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place of Destination"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/text_bg"/>

    <EditText
        android:id="@+id/vehicle_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Number"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/text_bg"/>

    <EditText
        android:id="@+id/contact_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        android:inputType="phone"
        android:maxLines="1"
        android:background="@drawable/text_bg"/>

    <Button
        android:id="@+id/inform_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Inform Now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_margin="20dp"/>

</LinearLayout>
